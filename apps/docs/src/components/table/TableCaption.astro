---
import { twMerge } from 'tailwind-merge';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'caption'> {
	className?: string;
}

const props = Astro.props;

const { className, ...otherProps } = props;
---

<caption
	class={twMerge('mt-4 text-sm text-muted-foreground', className)}
	{...otherProps}
>
	<slot />
</caption>
