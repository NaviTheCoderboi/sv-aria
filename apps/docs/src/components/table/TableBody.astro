---
import { twMerge } from 'tailwind-merge';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'tbody'> {
	className?: string;
}

const props = Astro.props;

const { className, ...otherProps } = props;
---

<tbody class={twMerge('[&_tr:last-child]:border-0', className)} {...otherProps}>
	<slot />
</tbody>
